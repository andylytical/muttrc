folder-hook EWorkMail/* source ~/.mutt/uiuc_exchange.muttrc

# Default mailbox when mutt starts
set spoolfile = "+GWorkMail/All Mail"

# which mailboxes to check for new mail
mailboxes "+GWorkMail/All Mail" +EWorkMail/INBOX
